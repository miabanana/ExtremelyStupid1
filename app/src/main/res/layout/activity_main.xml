<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huayinghuang.extremelystupid.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/big_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold" />

    <ImageView
        android:layout_height="250dp"
        app:srcCompat="@drawable/fuck"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fuck"
        android:layout_width="200dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLogin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:padding="3dp"
        android:background="@drawable/blue_line_btn">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/fb_logo_black"
            android:id="@+id/fbLogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:textSize="22sp"
            android:text="@string/fblogin"
            android:layout_toEndOf="@+id/fbLogo"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:typeface="serif" />
    </RelativeLayout>
</RelativeLayout>
